{
  "name": "zabari-tts",
  "version": "1.0.2",
  "description": "Multi-platform chat logger with TTS for live streaming",
  "main": "electron-main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build:frontend": "cd frontend && npm run build && cd .. && node scripts/post-build.js",
    "pack": "npm run build:frontend && electron-builder --dir",
    "dist": "npm run build:frontend && electron-builder --win --x64",
    "dist:portable": "npm run build:frontend && electron-builder --win portable",
    "dist:all": "npm run build:frontend && electron-builder --win --x64",
    "publish:github": "npm run build:frontend && electron-builder --win --x64 --publish always",
    "draft:github": "npm run build:frontend && electron-builder --win --x64 --publish onTagOrDraft",
    "release:check": "node scripts/release/pre-release-checklist.js",
    "release:patch": "node scripts/release/create-release.js patch",
    "release:minor": "node scripts/release/create-release.js minor",
    "release:major": "node scripts/release/create-release.js major",
    "release:draft": "node scripts/release/create-release.js patch --draft",
    "generate-icons": "node scripts/build/generate-icons-from-any.js",
    "tiktok:chat": "node scripts/tiktok-chat-beautiful.js",
    "c": "claude --permission-mode bypassPermissions"
  },
  "keywords": [
    "tts",
    "chat",
    "twitch",
    "youtube",
    "kick",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@playwright/test": "^1.56.0",
    "bufferutil": "^4.0.9",
    "electron-updater": "^6.6.2",
    "playwright": "^1.56.0",
    "pusher-js": "^8.4.0",
    "tmi.js": "^1.8.5",
    "utf-8-validate": "^6.0.5"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.2",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "svg2img": "^1.0.0-beta.2"
  },
  "build": {
    "appId": "com.zabari.tts",
    "productName": "Zabari TTS",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "asar": false,
    "npmRebuild": false,
    "publish": [
      {
        "provider": "github",
        "owner": "AhoyM8",
        "repo": "zabari-tts",
        "releaseType": "release"
      }
    ],
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "assets/**/*",
      "chat-logger-webspeech.js",
      "lib/**/*",
      "frontend/package.json",
      "frontend/.next/standalone/**/*",
      "frontend/.next/static/**/*",
      "frontend/.next/*.json",
      "frontend/public/**/*"
    ],
    "extraResources": [
      {
        "from": "kokoro-tts",
        "to": "kokoro-tts",
        "filter": [
          "tts-server.py",
          "requirements.txt",
          "README.md",
          "kokoro/**/*",
          "!**/*.pyc",
          "!**/__pycache__/**",
          "!.venv/**/*",
          "!venv/**/*"
        ]
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signtoolOptions": null,
      "signAndEditExecutable": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zabari TTS",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
